<div
  class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
>
  <h1 class="h2"><%= user.name %></h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <a href="/" class="btn btn-sm btn-outline-secondary">Home</a>
    </div>
  </div>
</div>

<form action="/edit/<%= user._id %>?_method=PUT" method="POST">
  <div class="row form-group mb-4">
    <div class="col">
      <label for="name">Product Name</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        value="<%=user.name%>"
      />
    </div>

    <div class="col">
      <label for="category">Category:</label>
      <input
        type="text"
        class="form-control"
        id="category"
        name="category"
        value="<%=user.category%>"
      />
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="quantity">Quantity</label>
      <input
        type="number"
        class="form-control"
        id="quantity"
        name="quantity"
        value="<%= user.quantity %>"
      />
    </div>

    <div class="col">
      <label for="price">Price</label>
      <input
        type="number"
        class="form-control"
        id="price"
        name="price"
        value="<%= user.price %>"
      />
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="description">description</label>
      <input
        type="text"
        class="form-control"
        id="description"
        name="description"
        value="<%= user.description %>"
      />
    </div>
  </div>

  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Update</button>
  </div>
</form>
